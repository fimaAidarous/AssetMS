@model IEnumerable<sample.Models.Asset_Maintenance>
@{
    ViewData["Title"] = "Index";
}

<h1>Asset Maintainance List</h1>



@section scripts {
    <script>
        function printAsset(Id) {
            window.open("@Url.Action("_Print")" + "?id=" + Id, "_blank");
        }
    </script>
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaintenanceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaintenanceType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Technician)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost) $
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger mr-2 mt-2 " asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>


                </td>
            </tr>
        }
    </tbody>
</table>
