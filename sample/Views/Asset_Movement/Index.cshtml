@model IEnumerable<sample.Models.Asset_Movement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoveReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsibleParty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoveDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoveReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsibleParty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info mr-2 mt-2" asp-route-id="@item.Id">Edit</a> 
                    <a asp-action="Delete" class="btn btn-danger mr-2 mt-2 " asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Details" class="btn btn-success mr-2 mt-2" asp-route-id="@item.Id">Details</a> 
                    
                </td>
            </tr>
        }
    </tbody>
</table>
